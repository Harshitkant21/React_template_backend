<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel Business Team</title>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        margin: 20px;
        background-color: #1a1a1a;
        color: #ddd;
      }

      h1 {
        color: #fba419;
        text-align: center;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }

      th,
      td {
        border: 1px solid #333;
        padding: 15px;
        text-align: left;
      }

      th {
        background-color: #333;
        color: #fff;
        font-weight: bold;
      }

      a {
        text-decoration: none;
        margin: 5px;
        padding: 8px;
        color: #ddd;
        background-color: #333;
        border-radius: 5px;
        transition: background-color 0.3s;
        display: inline-block;
      }

      a:hover {
        background-color: #555;
      }

      form {
        margin-top: 20px;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
        background-color: #333;
        padding: 60px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
      }

      label {
        display: block;
        margin-bottom: 10px;
        color: #ddd;
      }

      input {
        padding: 10px;
        margin-bottom: 15px;
        background-color: #1a1a1a;
        color: #ddd;
        border: 1px solid #333;
        border-radius: 5px;
        width: 100%;
      }

      button {
        padding: 12px;
        background-color: #fba419;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
        width: 100%;
      }

      button:hover {
        background-color: #e88c10;
      }
    </style>
  </head>

  <body>
    <h1>Business Team List</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Employee Name</th>
          <th>Designation</th>
          <th>Department</th>
          <th>Email</th>
          <th>Contact Number</th>
          <th>Profile Picture</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(employee => { %>
        <tr>
          <td><%= employee.id %></td>
          <td><%= employee.employee_name %></td>
          <td><%= employee.designation %></td>
          <td><%= employee.department %></td>
          <td><%= employee.email %></td>
          <td><%= employee.contact_number %></td>
          <td><%= employee.profile_picture %></td>
          <td>
            <a href="/businessteam/edit/<%= employee.id %>">Edit</a>
            <a href="/businessteam/delete/<%= employee.id %>">Delete</a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>

    <h2>Add Employee</h2>
    <form action="/businessteam/add" method="post">
      <label for="employee_name">Employee Name:</label>
      <input type="text" name="employee_name" required />

      <label for="designation">Designation:</label>
      <input type="text" name="designation" required />

      <label for="department">Department:</label>
      <input type="text" name="department" required />

      <label for="email">Email:</label>
      <input type="text" name="email" required />

      <label for="contact_number">Contact Number:</label>
      <input type="text" name="contact_number" required />

      <label for="profile_picture">Profile Picture:</label>
      <input type="text" name="profile_picture" required />

      <button type="submit">Add Employee</button>
    </form>
  </body>
</html>
